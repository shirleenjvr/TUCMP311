<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@+string/logo"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/welcomeTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:text="@+string/welcomeTXT"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/nextBTN"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="27dp"
        android:text="@+string/nextBTN"
        android:onClick="onClickNext" />

    <TextView
        android:id="@+id/messageTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nextBTN"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="236dp"
        android:text="@+string/messageTXT"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/messageTXT"
        android:layout_alignRight="@+id/welcomeTXT"
        android:layout_marginBottom="84dp"
        android:onClick="onClick"
        android:text="@+string/downloadBTN" />

    <TextView
        android:id="@+id/downloadTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="70dp"
        android:text="@+string/downloadTXT"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>


